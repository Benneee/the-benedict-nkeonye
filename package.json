{
  "name": "the-benedict-nkeonye",
  "version": "1.0.0",
  "description": "Back-end infrastructure for benedictnkeonye.com",
  "main": "index.js",
  "scripts": {
    "start": "babel-node src/index.js",
    "dev": "env-cmd ./config/dev.env nodemon --exec babel-node src/index.js",
    "test": "env-cmd ./config/test.env jest --collectCoverage --watch --runInBand",
    "babel-build": "babel src -d dist",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && npm run babel-build"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./jest.setup.js"
  },
  "repository": {
    "type": "git",
